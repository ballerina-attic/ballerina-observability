<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Ballerina Observability Extension Tests Suite" parallel="false">
    <listeners>
        <listener class-name="org.ballerinalang.test.listener.TestExecutionListener"/>
        <listener class-name="org.ballerinalang.test.listener.TestNGListener"/>
    </listeners>

    <!-- TODO: Re-enable once the issue with immortal being set for prometheus reporter is fixed -->
    <test name="ballerina-observability-tests" parallel="false" enabled="false">
        <classes>
            <class name="org.ballerinalang.observe.BaseTestCase"/>
            <class name="org.ballerinalang.observe.PrometheusMetricsTestCase"/>
        </classes>
    </test>
</suite>
